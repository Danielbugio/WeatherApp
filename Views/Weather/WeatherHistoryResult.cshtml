@model List<Weather>

@{
    ViewBag.Title = "Weather History";
}


@if (Model.Count == 0)
{
    <div class="card bg-info bottom-buffer">
        <h3 class="text-center"> No Records</h3>
    </div>
}
else
{
    <div class="card bg-info bottom-buffer">
        <h3>Weather History Results:</h3>
    </div>
    <form asp-action = "DeleteWeather" method = "post" >
    @foreach (Weather weather in Model)
    {


        <div class="card bottom-buffer">
            <div class="card-body">
                <table class="table table striped">
                    <tr>
                        <th>City</th>
                        <th>Temperature</th>
                        <th>Date</th>
                        <th>Delete</th>
                    </tr>
                    <tr>
                        <td>@weather.City</td>
                        <td>@weather.Temperature</td>
                        <td>@weather.Date</td>
                            <td><button type="submit" value="@weather.WeatherID" name="ID" title="Delete"><i class="bi bi-trash"></i></button></td>
                        

                    </tr>

                </table>
            </div>
        </div>
    }
    </form>
}


<a asp-controller="Weather" asp-action="InsertWeather" class="btn btn-primary"><i class="bi bi-plus"></i> Insert Weather</a>
